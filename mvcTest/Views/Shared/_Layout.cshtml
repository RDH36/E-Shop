<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Shop</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Hurricane&family=Tangerine&display=swap" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open Sans" />
    <!-- jQuery 3-6 -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/styles.css" />
    <script src="~/Scripts/panier.js" defer></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="position:sticky; top:0; z-index: 11;">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href=""><i class="fa-brands fa-shopify" style="margin-right:15px"></i>E-Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Produits", "ProduitItems", "Produit", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("À propos", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                    <a href="@Url.Action("", "Membre/Inscription")" class="btn btn-outline-dark" >
                        <i class="fa-solid fa-cart-shopping" style="font-size:20px; margin-right:10px;"></i>Panier
                        <span class="badge bg-dark text-white ms-1 rounded-pill" style="font-size:12px" id="panier">0</span>
                    </a>
            </div>
        </div>
    </nav>
    <header class="bg-dark py-5" style="margin-bottom:10px">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <section class="recommandation">
                    <div id="demo" class="carousel slide" data-bs-ride="carousel">

                        <!-- Indicators/dots -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="tire active"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="1" class="tire "></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="2" class="tire "></button>
                        </div>

                        <!-- The slideshow/carousel -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <h3>Bienvenue Chez E-Shop.</h3>
                                <p>Acheter plus vite et moins chers</p>
                            </div>
                            <div class="carousel-item">
                                <h3>Platforme Unique</h3>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eveniet</p>
                            </div>
                            <div class="carousel-item">
                                <h3>Sur et Securisé</h3>
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eveniet</p>
                            </div>
                        </div>

                        <!-- Left and right controls/icons -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                            <i class="fa-solid fa-circle-chevron-left"></i>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next"> 
                            <i class="fa-solid fa-circle-chevron-right"></i>
                        </button>
                    </div>
                </section>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - E-Shop</p>
        </footer>
    </div>

    @Scripts.Render("/jquery")
    @Scripts.Render("/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
